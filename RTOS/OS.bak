/************************************
*		 系统中断服务函数
*************************************/

void OS_ISR( void ) interrupt TIMER0_VECTOR
{
	uchar i;

   	TH0 = 256-(OS_CLOCK/TASK_CLOCK)/12/256; // 赋初值200Hz
	TL0 = 256-(OS_CLOCK/TASK_CLOCK)/12%256;
	for ( i=0; i<TASK_MAX; i++ )
	{
		if ( Task_Delay[i] )Task_Delay[i] --;
	}
}



